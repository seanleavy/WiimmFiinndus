<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_fragment_main_layout"
    android:background="@color/nintendo_red"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/Toolbar_textstyle"
            app:collapsedTitleTextAppearance="@style/Toolbar_textstyle"
            app:contentScrim="@color/nintendo_red"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent">

                <RelativeLayout
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/wiimfii_icon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/collapsing_image_Size"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:src="@mipmap/mario1600flipped"/>

                    <LinearLayout
                        android:layout_below="@id/wiimfii_icon"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content">

                        <com.wii.sean.wiimmfiitus.customViews.NintendoTextview
                            android:padding="@dimen/activity_horizontal_margin"
                            android:layout_gravity="bottom"
                            android:id="@+id/miis_found_label"
                            android:text="@string/miis_found_text"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Toolbar_textstyle"/>

                        <com.wii.sean.wiimmfiitus.customViews.NintendoTextview
                            android:padding="@dimen/activity_horizontal_margin"
                            android:layout_gravity="bottom"
                            android:id="@+id/miis_found_value"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Miis_found_textstyle"/>

                    </LinearLayout>

                </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_margin_10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.MkWiiHomeActivity"/>

    <ProgressBar
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/progress_bar_search"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/button_search_frame"
        android:layout_gravity="bottom|center"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin_extra_large"
        android:src="@drawable/ic_search_white_36dp" />

</android.support.design.widget.CoordinatorLayout>